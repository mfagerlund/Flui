.fade-out-instant {
    opacity: 0;
}

.fade-in {
    opacity: 1;
    transition: all 0.15s ease-out;
}

.fade-out {
    opacity: 0;
    transition: all 0.15s ease-out;
}

.centered-box {
    width: 750px;
    height: 850px;
    margin-left: auto;
    margin-right: auto;
    margin-top: auto;
    margin-bottom: auto;
    align-self: center;
    justify-self: center;
}